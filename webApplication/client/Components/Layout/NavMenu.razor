@using Client.Components.bodies
@inject HttpClient Http

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        @if (!string.IsNullOrEmpty(UserId))
        {
            <NavLink class="navbar-brand" href="@($"/user/{UserId}")"> @result.name 
                <img 
                src="@result.avatar">
                <img>
            </NavLink>
        }
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (!string.IsNullOrEmpty(UserId))
        {
            if (result.role == "Student")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/user/{UserId}/courses")">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Ваши Курсы
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/user/{UserId}/lectures")">
                        <span class="bi bi-book-fill" aria-hidden="true"></span> Ваши лекции
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/user/{UserId}/attendance")">
                        <span class="bi bi-bar-chart-line-fill" aria-hidden="true"></span> Ваша успеваемость
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Выход
                    </NavLink>
                </div>
            }
            else if (result.role =="Teacher")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/user/{UserId}/courses")">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Ваши Курсы
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/user/{UserId}/lectures")">
                        <span class="bi bi-book-fill" aria-hidden="true"></span> Ваши лекции
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/user/{UserId}/lectures/create")">
                        <span class="bi bi-bar-chart-line-fill" aria-hidden="true"></span> Создать лекцию
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@($"/user/{UserId}/attendance/create")">
                        <span class="bi bi-bar-chart-line-fill" aria-hidden="true"></span> Успеваемость
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Выход
                    </NavLink>
                </div>
            }
        }
        else
        {
            <div class="nav-item px-3">
                <span class="nav-link text-muted">Загрузка...</span>
            </div>
        }
    </nav>
</div>

@code {
    [Parameter] public string? UserId { get; set; }

    User result = new User();
    protected override async Task OnInitializedAsync()
    {


        var response = await Http.GetFromJsonAsync<User>($"api/User/{UserId}");
        result = response;


    }
}